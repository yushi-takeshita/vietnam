<% provide(:title) %>

<div data-scope-path="home/top">
  <% unless logged_in? %>
  <div class="introduction wide-wrap">
    <div class="row pt-3 pb-5 px-5">
      <div class="col-md-6">
        <h1><%= t(".日本で困ったら相談しよう。") %></h1>
        <p class="text-wrap">
          <%= t(".PostOneは日本に住むベトナム人の交流サイトです。") %><br>
          <%= t(".ベトナム語で掲示板を閲覧したり投稿することができます。") %><br>
          <%= t(".生活の知恵を共有したり、気の合う仲間を見つけてみましょう。") %>
        </p>
        <%= image_tag("flags.png", :size =>"440x250") %>
      </div>
      <div class="d-none d-md-block col-md-6">
        <%= render partial: "shared/form", locals: { object: @user } %>
      </div>
    </div>
  </div>
  <% end %>
  <div class="row main-contents">
    <%= search_form_for @q, url: category_path, class: "form-inline col-md-6 col-xl-5" do |f| %>
    <div class="form-group form-row">
      <%= f.search_field :title_or_content_cont, class: "form-control col-9", placeholder: t(".検索") %>
      <%= f.button type: "submit", class: "btn btn-secondary col-2" do %>
      <%= icon("fas", "search") %>
      <% end %>
    </div>
    <% end %>
    <div class="col-md-6 col-xl-6 offset-xl-1">
      <%= render partial: "shared/button_linked_create_post" %>
    </div>
    <div class="w-100"></div>
    <div class="col-md-6 col-xl-5">
      <div class="category_list list-group list-group-flush">
        <h3><%= t(".カテゴリー") %></h3>
        <div class="parents_list">
          <% @parents.each do |parent| %>
          <% if I18n.locale.to_s == "ja" %>
          <%= link_to "#{parent.ja_name}", category_path(parent.id), class: "parent_category list-group-item", id: "#{parent.id}" %>
          <% elsif I18n.locale.to_s == "vi" %>
          <%= link_to "#{parent.vi_name}", category_path(parent.id), class: "parent_category list-group-item", id: "#{parent.id}" %>
          <% end %>
          <% end %>
        </div>
        <input type="hidden" class="current_locale" value="<%= I18n.locale %>">
        <div class="children_list">
        </div>
      </div>
    </div>
    <div class="posts col-md-6 col-xl-6 offset-xl-1">
      <% if params[:category_id] && I18n.locale.to_s == "ja"  %>
      <h3><%= Category.find(params[:category_id]).ja_name %></h3>
      <% elsif params[:category_id] && I18n.locale.to_s == "vi" %>
      <h3><%= Category.find(params[:category_id]).vi_name %></h3>
      <% end %>
      <div class="page_entries_info"><%= page_entries_info @posts %></div>
      <div class="round-cap"></div>
      <%= render @posts %>
      <%= paginate @posts %>
    </div>
  </div>