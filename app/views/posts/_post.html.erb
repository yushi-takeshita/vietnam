<div class="card">
  <div class="row no-gutters">
    <div class="col-3 my-auto">
      <%= image_tag "unnamed.jpg", class: "card-img" %>
    </div>
    <div class="col-9">
      <div class="card-body">
        <%= link_to post.title, post, id: "post-#{post.id}", class: "card-link stretched-link" %>
        <p class="card-text"><%= post.created_at.strftime("%Y/%m/%d") %></p>
      </div>
    </div>
  </div>
</div>