<div class="card">
  <div class="body row no-gutters">
    <div class="col-3">
      <% if post.image.attached? %>
      <%= image_tag post.image, class: "card-img border" %>
      <% else %>
      <%= image_tag("default_image.jpg", class: "card-img border") %>
      <% end %>
    </div>
    <div class="col-9">
      <div class="card-body">
        <%= link_to post.title, post, id: "post-#{post.id}", class: "card-link stretched-link" %>
        <p class="card-text"><%= post.created_at.strftime("%Y/%m/%d") %></p>
      </div>
    </div>
  </div>
</div>