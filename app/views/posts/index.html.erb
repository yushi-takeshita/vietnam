<% provide(:title) %>

<div data-scope-path="posts/index">
	<%= search_form_for @q do |f| %>
	<div class="form-group row">
		<%= f.label :content_cont, "検索ワード", class: "col-sm-2 col-form-label" %>
		<div class="col-sm-10">
			<%= f.search_field :content_cont, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.submit class: "btn btn-outline-primary" %>
	</div>
	<% end %>
	<% @posts.each do |post| %>
	<p><%= post.title %></p>
	<% end %>
</div>