<% provide(:title) %>

<div data-scope-path="posts/index">
	<div class="row">
		<div class="col-md-6 col-xl-5">
			<div class="search">
				<%= search_form_for @q, class: "form-inline" do |f| %>
				<div class="form-group row justify-content-center">
					<%= f.search_field :content_cont, class: "form-control col-9", placeholder: t(".検索") %>
					<%= f.button type: "submit", class: "btn btn-secondary col-2" do %>
					<%= icon("fas", "search") %>
					<% end %>
				</div>
				<% end %>
				<div class="category_list list-group list-group-flush">
					<h3>カテゴリー</h3>
					<div class="parents_list">
						<% @parents.each do |parent| %>
						<%= link_to "#{parent.name}", category_path(parent), class: "parent_category list-group-item", id: "#{parent.id}" %>
						<% end %>
					</div>
					<div class="children_list">
					</div>
				</div>
			</div>
		</div>
		<div class="posts col-md-6 col-xl-5 offset-xl-2">
			<%= render @posts %>
			<%= paginate @posts %>
			<%= page_entries_info @posts %>
		</div>
	</div>
</div>