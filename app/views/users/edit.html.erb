<%= provide(:title, t(".プロフィールの編集")) %>

<div data-scope-path="users/edit">
  <h1 class="title-profile-edit"><%= t(".プロフィールの編集") %></h1>
  <%= render "shared/error_messages", object: @user %>
  <div>
    <%= form_with model: @user, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group file-field row no-gutters">
      <%= f.label :image, class: "image-icon col-md-1" do %>
      <%= icon("fas", "image fa-2x") %>
      <%= f.file_field :image, class: "selected-file" %>
      <% end %>
      <div class="col-md-7">
        <input class="form-control" id="dummy_file" type="text" placeholder="<%= t(".ファイル未選択") %>">
      </div>
    </div>
    <div class="form-group">
      <%= f.label :profile %>
      <%= f.text_area :profile, class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-primary " %>
    <% end %>
  </div>
</div>